    <%= simple_form_for @fixture, url: fixture_path, method: :patch do |f| %>

      <%= f.button :button, class: "btn btn-default toggle mt-3 mb-3" do %>
        <div class='slide'>
          <i class="fas fa-circle"></i>
        </div>
      <% end %>


      <div class="row">
        <div class='col-xs-12 col-sm-4'>
          <%= f.input :reference_no,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Reference No.",
                      required: true %>
        </div>
        <div class='col-xs-12 col-sm-4'>
          <%= f.input :vessel_name,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Vessel Name",
                      required: true %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :charterer,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Charterer",
                      required: true %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :voyage_number,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Voyage Number",
                      label_html: {class: ""},
                      required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :demurrage_rate,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Demurrage Rate",
                      label_html: {readonly: true, class: "edit-input"},
                      required: false %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :allowed_laytime,
                        input_html: {readonly: true, class: "edit-input"},
                        label: "Allowed Laytime",
                        required: false %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :clause_group_id,
                      input_html: {readonly: true, class: "edit-input"},
                      label: "Clause Group ID",
                      required: false %>
        </div>
      </div>
    <hr />

      <%# Loading and Discharge sub-headers  %>
      <div class="fixture-view__loading">   <%# JavaScript uses this class to append new loading entries %>
        <h2 class="mt-3 mb-3">Loading</h2>
      </div>

