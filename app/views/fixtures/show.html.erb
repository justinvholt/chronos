<div class="container-fluid px-6">
  <!-- Form for view Fixture -->
  <div class="fixtures__fixture-details">
    <h2>Fixture Details</h2>

    <%= simple_form_for @fixture, html: { class: 'super-edit-power' } do |ff| %>
      <div class="btn btn-default toggle mt-3 mb-3" id="edit-button">
        <div class="slide">
          <i class="fas fa-circle"></i>
        </div>
      </div>

      <%= render 'fixture_fields', f: ff %>
  </div>

  <hr />

  <!-- Add cargo button

  TO BE ADDED AS A MODEL OR A COCOON EVENT LATER
  For details on how to do the cocoon stuff, look at Steven's code in the show_old page below.

  -->

  <h2 class="mt-5 mb-4">Cargo</h2>


    <div class="big-edit" style="display: block">
      <%= render "cargo_show" %>
    </div>

    <div class="big-edit" style="display: none">
      <%= render "cargo_edit", ff: ff %>
    </div>

  <hr />

  <h2 class="mt-5 mb-3"><a name="clauses">Clauses</a></h2>

    <%= render 'clause_show' %>

  <% end %>
</div>
