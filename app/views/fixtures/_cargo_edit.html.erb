<h4 class="mt-5 mb-3">Loading</h4>

<table class="table">
  <thead>
    <tr>
      <th>Port</th>
      <th>Terminal</th>
      <th>Berth</th>
      <th>Obl</th>
      <th>Name</th>
      <th>Qty - Mts</th>
    </tr>
  </thead>
  <tbody>
    <div id="cargoes">
      <%= ff.fields_for :cargoes do |cargo| %>
        <%= render 'cargo_fields', f: cargo, prefix: 'load' %>
      <% end %>
    </div>
  </tbody>
</table>

