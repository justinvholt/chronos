<h4 class="mt-4 mb-3">Loading</h4>

<div class="btn btn-default toggle mt-3 mb-3" id="edit-button">
  <div class="slide">
    <i class="fas fa-circle"></i>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Port</th>
      <th>Terminal</th>
      <th>Berth</th>
      <th>Obl</th>
      <th>Name</th>
      <th>Qty - Mts</th>
    </tr>
  </thead>
  <tbody>
    <div id="cargoes">
      <%= ff.fields_for :cargoes do |cargo| %>
        <%= render 'cargo_fields', f: cargo, prefix: 'load' %>
      <% end %>
    </div>

    <hr />

  </tbody>
</table>

