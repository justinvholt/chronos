<!-- Begin page content -->
<div class="container-fluid px-6">
  <%= link_to "fixtures/new", class: "btn btn-primary btn-lg mt-5 mb-3" do %>
    ADD FIXTURE
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Vessel</th>
        <th>Voyage No.</th>
        <th>Charterer</th>
        <th>Demurrage Est.</th>
        <th>Fixture</th>
        <th>Required</th>
        <th>Documents</th>
        <th>Voyage Status</th>
        <th>+</th>
      </tr>
    </thead>
    <tbody>

      <% @fixtures.each do |fixture| %>
        <%= render partial: "fixture_row", locals: { fixture: fixture } %>
      <% end %>

    </tbody>
  </table>
</div>
