<!-- Begin page content -->
<div class="container-fluid px-6">
  <%= link_to new_fixture_url, class: "btn btn-primary btn-lg mt-5 mb-3" do %>
    ADD FIXTURE
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Vessel</th>
        <th>Voy</th>
        <th>Charterer</th>
        <th>Demurrage</th>
        <th>Fixture</th>
        <th>Required</th>
        <th>Documents</th>
        <th>Voyage Status</th>
        <th>+</th>
      </tr>
    </thead>
    <tbody>

      <% @fixtures.each do |fixture| %>
        <%= render "fixture_row", fixture: fixture %>
      <% end %>

    </tbody>
  </table>
</div>
