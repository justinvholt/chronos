                    label_html: {readonly: read_only, class: ""},
                    required: true %>

    </div>
    <div class="col col3">
      <%= ff.input :disch_berth,
                    input_html: {readonly: read_only, class: ""},
                    label: "Berth",
                    required: true %>
    </div>
    <div class="col col4">
      <%= ff.input :disch_obl, as: :fake,
