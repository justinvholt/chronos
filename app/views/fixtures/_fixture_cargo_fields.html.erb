<% page_view = "" if local_assigns[:page_view].nil? %>
<% read_only = "true" if page_view == "show" %>
  <div class="row" id="loading">
    <div class="col col1">
      <%= ff.input :load_port,
                    input_html: {readonly: read_only, class: ""},
                    label: "Port",
                    label_html: {readonly: read_only, class: ""},
                    required: true %>
    </div>
    <div class="col col2">
      <%= ff.input :load_terminal,
                    input_html: {readonly: read_only, class: ""},
                    label: "Terminal",
                    label_html: {readonly: read_only, class: ""},
                    required: true %>
    </div>
    <div class="col col3">
      <%= ff.input :load_berth,
                    input_html: {readonly: read_only, class: ""},
                    label: "Berth",
                    required: true %>
    </div>
    <div class="col col4">
      <%= ff.input :obl,
                    input_html: {readonly: read_only, class: ""},
                    label: "Obl",
                    required: true %>
    </div>
    <div class="col col5">
      <%= ff.input :name,
                    input_html: {readonly: read_only, class: ""},
                    label: "Name",
                    required: true %>
    </div>
    <div class="col col6">
      <%= ff.input :quantity_mts,
                    input_html: {readonly: read_only, class: ""},
                    label: "Qty - Mts",
                    required: true %>
    </div>
  </div>

  <div class="row" id="discharge">
    <div class="col col1">
