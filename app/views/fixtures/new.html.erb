<div class="container-fluid px-6">

  <div class="new-fixture__form">
    <h2 class="mt-5 mb-3">Fixture Details</h2>

    <!-- Button trigger modal -->
    <button class="btn btn-primary mt-3 mb-3" type="button" data-toggle="modal" data-target="#exampleModalCenter">
      Add Voyage
    </button>
  </div>

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content home-modal">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Voyage Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <%= simple_form_for @fixture, url: fixtures_path, method: :post do |f| %>

              <div class="container-fluid">
                <div class="row">
                  <div class='col-xs-12 col-sm-6'>
                    <%= f.input :reference_no,
                                input_html: {class: ""},
                                label: "Reference No.",
                                required: true %>
                  </div>
                  <div class='col-xs-12 col-sm-6'>
                    <%= f.input :vessel_name,
                                input_html: {class: ""},
                                label: "Vessel Name",
                                required: true %>
                    </div>
                    <div class='col-xs-12 col-sm-6'>
                    <%= f.input :charterer,
                                input_html: {class: ""},
                                label: "Charterer",
                                required: true %>
                    </div>
                    <div class='col-xs-12 col-sm-6'>
                    <%= f.input :voyage_number,
                                input_html: {class: ""},
                                label: "Voyage Number",
                                label_html: {class: ""},
                                required: true %>
                    </div>
                    <div class='col-xs-12 col-sm-6'>
                    <%= f.input :demurrage_rate,
                                input_html: {class: ""},
                                label: "Demurrage Rate",
                                label_html: {class: ""},
                                required: false %>
                    </div>
                    <div class='col-xs-12 col-sm-6'>
                    <%= f.input :allowed_laytime,
                                 input_html: {class: ""},
                                 label: "Allowed Laytime",
                                 required: false %>
                    </div>
                    <div class='col-xs-12 col-sm-6'>
                    <%= f.input :clause_group_id,
                                input_html: {class: ""},
                                label: "Clause Group ID",
                                required: false %>
                    </div>
                  </div>
                </div>
          </div>
          <div class="modal-footer">
              <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
              <%= f.button :submit, "Create Voyage", class: "btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr />

