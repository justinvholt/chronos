             Add Voyage
          <% end %>
          <div class="row">
            <div class='col-xs-12 col-sm-4'>

              <%= f.input :vessel_name,
                          input_html: {class: ""},
                          label: "Vessel Name",
                          required: true %>
            </div>
            <div class='col-xs-12 col-sm-4'>
              <%= f.input :charterer,
                          input_html: {class: ""},
                          label: 'Charterer',
                          required: true %>
            </div>
            <div class='col-xs-12 col-sm-4'>
              <%= f.input :voyage_number,
                          input_html: {class: ""},
                          label: "Voyage Number",
                          label_html: {class: ""},
                          required: true %>
            </div>
          </div>
          <div class="row">
            <div class='col-xs-12 col-sm-4'>
              <%= f.input :demurrage_rate,
                          input_html: {class: ""},
                          label: "Demurrage Rate",
                          label_html: {class: ""},
                          required: false %>
            </div>
            <div class='col-xs-12 col-sm-4'>
              <%= f.input :allowed_laytime,
                           input_html: {class: ""},
                           label: "Allowed Laytime",
                           required: false %>
            </div>
            <div class='col-xs-12 col-sm-4'>
              <%= f.input :clause_group_id,
                          input_html: {class: ""},
                          label: "Clause Group ID",
                          required: false %>
            </div>
          </div>

      <div class="form-group">
          <%= link_to_add_association 'Add Cargo', f, :fixture_cargos, class: "btn btn-primary mt-3 mb-3", data: { association_insertion_node: '.new-fixture__add-cargos', association_insertion_method: :append } %>
      </div>

      <div class="new-fixture__add-cargo-button">
