<div class="new-fixture__form">
  <h2>Enter fixture</h2>
  <%= simple_form_for @fixture, url: fixtures_path, :method => :post do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
        <%= f.button :button, class: "btn btn-primary" do %>
           Add Voyage
        <% end %>
        <%= f.input :vessel_name,
                    input_html: {class: ""},
                    label: "Vessel Name",
                    required: true %>
        <%= f.input :charterer,
                    input_html: {class: ""},
                    label: 'Charterer',
                    required: true %>
        <%= f.input :voyage_number,
                    input_html: {class: ""},
                    label: "Voyage Number",
                    label_html: {class: ""},
                    required: true %>
        <%= f.input :demurrage_rate,
                    input_html: {class: ""},
                    label: "Demurrage Rate",
                    label_html: {class: ""},
                    required: false %>
        <%= f.input :allowed_laytime,
                     input_html: {class: ""},
                     label: "Allowed Laytime",
                     required: false %>
        <%= f.input :clause_group_id,
                    input_html: {class: ""},
                    label: "Clause Group ID",
                    required: false %>
    </div>

    <%# Add additional FixtureCargo fields for user input %>
    <div class="new-fixture__add-cargos">
  <%= f.simple_fields_for :fixture_cargos do |builder| %>
    <%= render 'fixture_cargo_fields', f: builder %>
  <% end %>
    </div>
    <div class="form-group">
        <%= link_to_add_association 'Add Cargo', f, :fixture_cargos, class: "btn btn-primary", data: { association_insertion_node: '.new-fixture__add-cargos', association_insertion_method: :append } %>
    </div>
  <% end %>
</div>