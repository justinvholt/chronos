<div class="container-fluid px-6">
  <div class="new-fixture__form">
    <h2 class="mt-5 mb-3">Fixture Details</h2>

    <!-- Button trigger modal -->
    <button class="btn btn-primary mt-3 mb-3" type="button" data-toggle="modal" data-target="#exampleModalCenter">
      Add Voyage
    </button>
  </div>

  <div class="modal modal-wide fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centere" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Voyage Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">

          <%= simple_form_for @fixture, url: fixtures_path, method: :post do |f| %>

            <div class="container-fluid">

              <div class="row">
                <div class="col-xs-12 col-sm-6">
                  <div class="import-file pt-2 pb-3">
                    <%= form_tag import_fixtures_path, multipart: true do %>
                      <%= file_field_tag :file %>
                      <%= submit_tag "Import fixture", class: "btn btn-outline-secondary" %>
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class='col-md-2'>
                  <%= f.input :reference_no,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Reference No.",
                              required: true %>
                </div>
                <div class="col-md-2">
                  <%= f.input :voyage_number,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Voyage No.",
                              label_html: {class: ""},
                              required: true %>
                </div>
                <div class="col-md-3">
                  <%= f.input :clause_group, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "CP Form*",
                              required: true %>
                </div>
              </div>

              <div class="row">
                <div class='col-md-2'>
                  <%= f.input :vessel_name,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Vessel Name",
                              required: true %>
                </div>
                <div class="col-md-2">
                  <%= f.input :charterer,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Charterer",
                              required: true %>
                </div>

                <div class="col-md-3">
                  <%= f.input :contract_type, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Contract Type*",
                              label_html: {class: ""},
                              required: true %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <%= f.input :vessel_dwt, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Vessel DWT*",
                              label_html: {class: ""},
                              required: false %>
                </div>

                <div class="col-md-2">
                  <%= f.input :demurrage_rate,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Demurrage Rate",
                              label_html: {class: ""},
                              required: false %>
                </div>
                <div class="col-md-3">
                  <%= f.input :contract_terms, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Contract Terms*",
                              label_html: {class: ""},
                              required: false %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <%= f.input :total_cargo_qty, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Total Cargo Qty*",
                              required: false %>
                </div>
                <div class="col-md-2">
                  <%= f.input :allowed_laytime,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Allowed Laytime",
                              required: false %>
                </div>
                <div class="col-md-3">
                  <%= f.input :reversable, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Reversible",
                              required: false %>
                </div>
              </div>

            </div>
        </div>
        <div class="modal-footer">
            <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
            <%= f.button :submit, "Create Voyage", class: "btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>

  <hr />

  <%#= simple_form_for @fixture, url: fixtures_path, method: :post do |f| %>
    <%#= f.error_notification %>

    <!-- Add cargo button -->

    <%# unless @fixtures.nil? %>
      <div class="new-fixture__add-cargo-button">
        <%#= link_to_add_association "Add Cargo", f, :fixture_cargos, class: "btn btn-primary mt-3 mb-3", data: { association_insertion_node: ".new-fixture__add-cargos", association_insertion_method: :append } %>
      </div>
    <%# end %>


    <!-- Loading and Discharge sub-headers -->

    <%# unless @fixture_cargoes.nil? %>
      <!-- JavaScript uses this class to append new discharge entries -->
<!--       <div class="fixture-view__loading">
        <h2 class="mt-3 mb-3">Loading</h2>
      </div>

      <hr />

      JavaScript uses this class to append new discharge entries
      <div class="fixture-view__discharge">
        <h2 class="mt-3 mb-3">Discharge</h2>
      </div>
 -->    <%# end %>

    <!--
      Add additional FixtureCargo fields for user input partial _fixture_cargo_fields is appended to div.new-fixture__add-cargos and dynamically moved to the Loading/Discharge header
    -->

    <!-- <div class="new-fixture__add-cargos"> -->
      <%#= f.simple_fields_for :fixture_cargos do |builder| %>
        <%#= render "fixture_cargo_fields", f: builder %>
      <%# end %>
    <!-- </div> -->
  <%# end %>
</div>
