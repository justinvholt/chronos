<div class="container-fluid px-6">
  <!-- Form for view Fixture -->
  <h2 class="mt-5 mb-3">Fixture Details</h2>


  <%= simple_form_for @fixture, html: { class: 'super-edit-power' } do |ff| %>
    <div class="btn btn-default toggle mt-3 mb-3">
      <div class="slide">
        <i class="fas fa-circle"></i>
      </div>
    </div>

    <%= render 'fixture_fields', f: ff %>

    <hr />

    <h2 class="mt-3 mb-3">Cargo</h2>

    <h4 class="mt-5 mb-3">Loading</h4>

    <div class="btn btn-default toggle mt-3 mb-3">
      <div class="slide">
        <i class="fas fa-circle"></i>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Port</th>
          <th>Terminal</th>
          <th>Berth</th>
          <th>Obl</th>
          <th>Name</th>
          <th>Qty - Mts</th>
        </tr>
      </thead>
      <tbody>
        <div id="cargoes">
          <%= ff.fields_for :cargoes do |cargo| %>
            <%= render 'cargo_fields', f: cargo, prefix: 'load' %>
          <% end %>
        </div>
      </tbody>
    </table>

    <hr />

    <h4 class="mt-5 mb-3">Discharge</h4>

    <div class="btn btn-default toggle mt-3 mb-3">
      <div class="slide">
        <i class="fas fa-circle"></i>
      </div>
    </div>

    <div>
      <table class="table">
        <thead>
          <tr>
            <th>Port</th>
            <th>Terminal</th>
            <th>Berth</th>
            <th>Obl</th>
            <th>Name</th>
            <th>Qty - Mts</th>
          </tr>
        </thead>
        <tbody>
          <div id="cargoes">
            <%= ff.fields_for :cargoes do |cargo| %>
              <%= render 'cargo_fields', f: cargo, prefix: 'disch' %>
            <% end %>
          </div>
        </tbody>
      </table>
    </div>





  <% end %>
</div>
