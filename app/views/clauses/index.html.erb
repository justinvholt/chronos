<div class="container-fluid px-6">
  <div class="d-flex justify-content-start">
   <form class="form-inline">
    <div class="row">
      <div class ="col xs-12 mr-3 mt-3">

        <%= link_to "ADD SINGLE CLAUSE", new_clause_path, class: "btn btn-primary btn-lg" %>

      </div>
      <div class ="col xs-12 mr-3 mt-4">
        <div class="active-cyan-3 active-cyan-4">
          <input class="form-control" type="text" placeholder="Search" aria-label="Search" name="query">
        </div>
      </div>
    </div>
    </form>
  </div>


  <div class="table-responsive">
    <table class="table-striped table borderless">
       <thead>
         <tr>
           <th>Parent</th>
           <th>Title</th>
           <th>Wording</th>
           <th class="adjust-width">Clause ID</th>
           <th>Actions</th>
         </tr>
       </thead>

       <tbody>
         <% @clauses.each do |clause| %>
         <tr>
          <td><%= "#{clause.cp_form.upcase}" + " " + "#{clause.parent_relation}" %></td>
          <td>
            <div class=row">
              <div class="col">
                <%= "#{clause.title.titleize}" %>
              </div>
              <div class="col">
                <%= "#{clause.paragraph}" %>
              </div>
            </div>
          </td>
          <td><%= clause.wording %></td>
          <td><%= clause.id %></td>
          <td>
           <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button>
           <div class="dropdown-menu" role="menu">
            <%= link_to "Amend details", edit_clause_path(clause), class: "dropdown-item" %>
            <%= link_to 'Delete',
            clause_path(clause),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this item?' }, class: "dropdown-item" %>
            <%= link_to "Request bloc change", new_clause_path, class: "dropdown-item" %>
          </div>
        </td>
      </tr>
      <% end %>
     </tbody>
    </table>
  </div>
</div>



