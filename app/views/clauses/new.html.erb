
<div class="container-fluid px-6">

<div class="table-responsive">
 <table class="table-striped table borderless">

   <thead>
         <tr>
           <th>Parent</th>
           <th>Title</th>
           <th>Wording</th>
           <th class="adjust-width">Chronos ID</th>
           <th>Actions</th>
         </tr>
       </thead>

   <tbody>
    <%= simple_form_for @clause, url: clauses_path, :method => :post do |f| %>
     <tr>
      <td>
        <%= f.input :cp_form,
        input_html: {class: ""},
        label: "CP-Form",
        required: true %>
      </td>

      <td>
        <div class="row">
          <div class="col">
        <%= f.input :title,
        input_html: {class: ""},
        label: 'Title',
        required: true %>
        </div>
      </div>
      <div class="row">
        <div class="col">
           <%= f.input :paragraph,
        input_html: {class: ""},
        label: 'Paragraph',
        required: true %>
        </div>
        </div>
            </div>
        </td>
      <td>
        <%= f.input :wording,
        input_html: {class: "form-control input-lg"},
        label: 'wording',
        required: true %>
      </td>
      <td>
        <div class="id-positioning">
        1
      </div>
    </td>
      <td>
          <%= f.button :button, class: "btn btn-primary btn-curious-blue button-positioning" do %>
            Submit Single Clause
          <% end %>
    </td>
  </tr>
  <% end %>



</tbody>
</table>
</div>


</div>
